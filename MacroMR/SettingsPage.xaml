<Page x:Class="MacroMR.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Settings"
      Background="#1E1E1E">

    <Grid>
        <!-- خلفية الشعار -->
        <Grid.Background>
            <ImageBrush ImageSource="logo.png" Opacity="0.1"/>
        </Grid.Background>

        <!-- محتوى الإعدادات -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="220" Margin="0,20,0,20">

                <!-- العنوان -->
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <TextBlock Text="Settings" FontSize="18" FontWeight="Bold" Foreground="White" TextAlignment="Center"/>
                </Border>

                <!-- سرعة الماكرو -->
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,5" Padding="4">
                    <TextBlock x:Name="SpeedValueText"
                               Text="Speed: 0.0 ms"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </Border>

                <Slider x:Name="MacroSpeedSlider"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        TickFrequency="1"
                        IsSnapToTickEnabled="True"
                        ValueChanged="MacroSpeedSlider_ValueChanged"
                        Margin="0,0,0,10"/>

                <!-- Trigger Key -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Trigger Key:" Foreground="#FFD700" FontWeight="Bold"/>
                </Border>
                <Button x:Name="TriggerKeyButton" Content="Press a key" Click="TriggerKeyButton_Click" Margin="0,0,0,10" Height="30"/>

                <!-- Key 1 -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Key 1 :" Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button x:Name="Key1Button" Content="Press a key" Click="Key1Button_Click" Margin="0,0,0,2"/>
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="Key1Checkbox" Content="Enable Key 1" Foreground="White"/>
                </Border>

                <!-- Key 2 -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Key 2:" Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button x:Name="Key2Button" Content="Press a key" Click="Key2Button_Click" Margin="0,0,0,2"/>
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="Key2Checkbox" Content="Enable Key 2" Foreground="White"/>
                </Border>

                <!-- Key 3 (HOLD) -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Key 3  - HOLD:" Foreground="#FF4444" FontWeight="Bold"/>
                </Border>
                <Button x:Name="Key3Button" Content="Press a key" Click="Key3Button_Click" Margin="0,0,0,2"/>
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="Key3Checkbox" Content="Enable Key 3" Foreground="White"/>
                </Border>

                <!-- Key 4 -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Key 4 :" Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button x:Name="Key4Button" Content="Press a key" Click="Key4Button_Click" Margin="0,0,0,2"/>
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="Key4Checkbox" Content="Enable Key 4" Foreground="White"/>
                </Border>

                <!-- Key 5 -->
                <Border Background="#66000000" CornerRadius="4" Padding="3" Margin="0,0,0,2">
                    <TextBlock Text="Key 5 :" Foreground="White" FontWeight="Bold"/>
                </Border>
                <Button x:Name="Key5Button" Content="Press a key" Click="Key5Button_Click" Margin="0,0,0,2"/>
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="Key5Checkbox" Content="Enable Key 5" Foreground="White"/>
                </Border>

                <!-- Infinite Macro -->
                <Border Background="#66000000" CornerRadius="4" Margin="0,0,0,10" Padding="5">
                    <CheckBox x:Name="InfiniteMacroCheckbox"
                              Content="Enable infinite macro"
                              Foreground="White" FontWeight="Bold"/>
                </Border>

                <!-- أزرار التحكم -->
                <Button Content="Save Settings" Click="SaveSettings_Click" Margin="0,0,0,10"/>
                <Button x:Name="BackButton" Content="Back" Click="BackButton_Click" Margin="0,0,0,10"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>