<Window x:Class="MacroMR.EmailInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Verification"
        Height="400"
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Black">

    <Grid>
        <!-- الشعار -->
        <Image Source="logo.png"
               Stretch="Uniform"
               Height="405"
               VerticalAlignment="Center"
               Margin="-44,0,-39,0"
               Opacity="1.08"
               Panel.ZIndex="0"/>

        <!-- الواجهة -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="280"
                    Panel.ZIndex="1">
            <!-- البريد -->
            <Border CornerRadius="5"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Background="White"
                    Height="35"
                    Margin="0,10,0,10">
                <Grid>
                    <TextBox x:Name="EmailTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10,2,10,2"
                             VerticalAlignment="Center"
                             FontSize="14"
                             TextChanged="EmailTextBox_TextChanged"
                             Foreground="Black"/>
                    <TextBlock x:Name="EmailPlaceholder"
                               Text="Enter your email"
                               Foreground="Black"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <Button x:Name="SendCodeButton"
                    Content="Send Verification Code"
                    Height="35"
                    Margin="0,5"
                    Click="SendVerificationCode_Click" Foreground="Black" FontWeight="Bold" FontSize="16"/>

            <!-- الأزرار -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0">
                <Button x:Name="LanguageToggleButton"
                        Content="العربية / EN"
                        Width="120"
                        Margin="5"
                        Click="ToggleLanguage_Click" FontWeight="Bold" FontSize="14"/>
                <Button x:Name="SupportButton"
                        Content="Support"
                        Width="120"
                        Margin="5"
                        Click="Support_Click" FontWeight="Bold" FontSize="14"/>
            </StackPanel>

            <TextBlock Text="© MARWAN"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="10" FontWeight="Bold" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>