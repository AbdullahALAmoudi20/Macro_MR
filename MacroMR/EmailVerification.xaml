<Window x:Class="MacroMR.EmailVerification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email Verification" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Image Source="logo.png" Stretch="UniformToFill" Opacity="1.3" RenderTransformOrigin="0.5,0.5" Margin="-1,3,1,-3" VerticalAlignment="Center">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.208"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.515"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <TextBlock x:Name="InstructionText" Text="Enter verification code"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   Margin="0,67,0,0" FontSize="14"
                   Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" FontWeight="Bold"/>

        <TextBox x:Name="CodeTextBox" Width="200" Height="30"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,91,0,0"/>

        <Button x:Name="VerifyButton" Content="Verify"
                Width="100" Height="30" HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="VerifyButton_Click" FontWeight="Bold" FontSize="14" Margin="0,142,0,0"/>

        <Button x:Name="ResendButton" Content="Resend Code" Width="120" Height="25"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,177,0,0"
                Click="ResendButton_Click" FontWeight="Bold" FontSize="14"/>

        <Button x:Name="LanguageToggle" Content="SA" Width="60" Height="25"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="117,0,0,26"
                Click="ToggleLanguage_Click" FontWeight="Bold" FontSize="14"/>

        <Button x:Name="SupportButton" Content="Support" Width="80" Height="25"
                HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,120,28"
                Click="Support_Click" FontWeight="Bold" FontSize="14"/>

        <TextBlock Text="©️ MARWAN" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                   Margin="150,0,0,0" FontSize="14" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>