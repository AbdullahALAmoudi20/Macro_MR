<Window x:Class="MacroMR.LicenseActivationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate License" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- صورة الخلفية -->
        <Image Source="logo.png"
               Opacity="1.1"
               Stretch="UniformToFill"
               Panel.ZIndex="0" />

        <!-- المحتوى الأمامي -->
        <StackPanel Margin="20" Panel.ZIndex="1">
            <TextBlock x:Name="InstructionText"
                       Text="Enter your license key:"
                       Margin="0 0 0 10"
                       Foreground="Black"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBox x:Name="LicenseKeyBox" Height="30"/>
            <Button Content="Activate"
                    Click="Activate_Click"
                    Margin="0 10 0 0"
                    Height="30"/>
            <Button Content="العربية / English"
                    Click="ToggleLanguage_Click"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>